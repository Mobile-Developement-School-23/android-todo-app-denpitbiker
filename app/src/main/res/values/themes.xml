<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/back_primary_light</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="backgroundColor">@color/back_primary_light</item>
        <item name="android:windowBackground">@color/back_primary_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/label_primary_light</item>
        <item name="android:textColorSecondary">@color/label_secondary_light</item>
        <item name="android:textColorTertiary">@color/label_tertiary_light</item>
        <item name="android:textColorHint">@color/label_tertiary_light</item>
        <item name="dividerColor">@color/support_separator_light</item>
        <item name="colorControlActivated">@color/color_blue_light</item>
        <item name="android:datePickerDialogTheme">@style/DatePicker</item>
        <item name="color_delete_active">@color/color_red_light</item>
        <item name="color_delete_inactive">@color/label_tertiary_light</item>
    </style>
    <style name="BlueItems">
        <item name="colorPrimary">@color/color_blue_light</item>
        <item name="android:textColor">@color/color_blue_light</item>
    </style>
    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/color_blue_light</item>
        <item name="colorAccent">@color/color_blue_light</item>
        <item name="android:textColor">@color/color_blue_light</item>
        <item name="android:background">@color/transparent</item>
    </style>
</resources>